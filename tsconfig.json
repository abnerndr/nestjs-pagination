{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*", "src/types/**/*"]
}
